# {{ ansible_managed }}
# =============================================================================
# Ethereum Node Environment Configuration
# =============================================================================
# Execution: {{ execution_client }}
# Consensus: {{ consensus_client }}
# Node Type: {{ node_type }}
# =============================================================================

# Client versions
{% if execution_client == 'reth' %}
RETH_VERSION={{ reth_version }}
{% elif execution_client == 'geth' %}
GETH_VERSION={{ geth_version }}
{% endif %}
{% if consensus_client == 'lighthouse' %}
LIGHTHOUSE_VERSION={{ lighthouse_version }}
{% elif consensus_client == 'prysm' %}
PRYSM_VERSION={{ prysm_version }}
{% endif %}

# User/group IDs
UID={{ service_uid | default(2000) }}
GID={{ service_gid | default(2000) }}

# Network
NETWORK={{ ethereum_network }}
